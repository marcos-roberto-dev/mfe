{
  "extends": ["@repo/typescript-config/base.json"],
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["dom", "es2015"],
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2015",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "declarationDir": "./dist/types"
  },
  "include": ["./src"],
    "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "**/__tests__/**"
    ]
}